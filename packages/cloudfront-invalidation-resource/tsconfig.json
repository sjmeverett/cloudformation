{
  "compilerOptions": {
    "target": "es2019",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "strict": true,
    "types": ["node"],
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "declaration": true,
    "declarationMap": true,
    "module": "commonjs"
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
